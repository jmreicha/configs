# Cursor
cursor-color = green
cursor-style = block
shell-integration-features = no-cursor
cursor-style-blink = true

# Display
theme = Afterglow
fullscreen = true
background-opacity = .7
background-blur-radius = 20

# Tray icon
macos-icon = custom-style
macos-icon-ghost-color = dark green
macos-icon-screen-color = black

# Font
font-size = 16

# Misc
quick-terminal-screen = macos-menu-bar
quit-after-last-window-closed = false
macos-option-as-alt = false
clipboard-read = allow
clipboard-write = allow
copy-on-select = true

# Keybindings
keybind = global:cmd+s=toggle_quick_terminal
keybind = command+left=previous_tab
keybind = command+right=next_tab
